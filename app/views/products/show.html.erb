<div class="container" style="color: white;">
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <div class="pt-5">
<section class="mb-5">

  <div class="row">
    <div class="col-md-12 mb-4 mb-md-0">

      <div id="mdb-lightbox-ui"></div>

      <div class="mdb-lightbox">

        <div class="row product-gallery mx-1">

          <div class="col-12 mb-0">
  

                <div class="pt-5">
                <img src="<%= @product.image %>"
                  class="img-fluid z-depth-1">
                  </div>
            
          </div>
        </div>

      </div>

    </div>
    <div class="col-md-12 lefter">
      <div class="pt-5">
       <hr>
      <h5 style="text-align: center;font-size:400%;"><%= @product.title %></h5>
      <hr>
           <p class="mb-2 text-muted text-uppercase small" style="font-size:150%"><%= @product.category.title %></p>
      <p class="text-muted" style="font-size:150%"> Оцінка за відгуками: <%= @product.rating %> </p>

  </div>
      <p style="font-size:300%"><%= number_to_currency(@product.price, unit: "UAH", separator: ",", delimiter: " ", format: "%n %u") %></p>
      <p class="pt-1" style="font-size:200%"><%= @product.description %></p>
      <div class="table-responsive">
        <table class="table table-sm table-borderless mb-0">

        </table>
      </div>
      <hr>
      <% if current_user.present? %>
    <%= link_to 'Додати до обраних пропозицій', product_order_items_path(@product), method: :post, class: "btn btn-outline-dark", style:"color: white; font-size:150% "%>
    <% else %>
    <p style="font-size: 150%;"><%= link_to 'Увійти в систему', new_user_session_path ,class: "btn btn-outline-dark", style: "color: white; font-size: 90%;"%>&nbsp; - для того щаб додати цей продукт до кошика </p>
    <% end %>
    <% if allowed_to_comment(@product) %>
      <%= link_to 'Створити коментар', new_comment_path(user_id: current_user, product_id: @product), method: :get, class: "btn btn-outline-dark", style:"color: white; font-size:150%"%>
      <% end %>


    </div>
  </div>

</section>
<!--Section: Block Content-->
</div>
 <div class="col-lg-6 sm-12">

   <%= render 'comments/comment_show' %>
   </div>
 </div>